    @*Create Schedule Table*@
    <div class="schedule" style="color:gold;">
        <h3 style="text-align:center; color:gold;"><u>Schedule</u></h3>
        <table class="table"style="margin:auto;">
            <thead>
                <tr>
                    <th>Event</th>
                    <th>Week Days</th>
                    <th>Times</th>
                </tr>
            </thead>
            <tbody>
                @*Loop through each schedule item from the list of Schedule View Models that we passed in from the controller*@
                @foreach (var schedule in ViewBag.scheduleViewModelList)
                {
                    <tr>
                        @*Display each schedule with it's elements in their respective columns*@
                        <td>@schedule.CourseCode @schedule.CourseNumber</td>
                        <td>@schedule.DayOfTheWeek1</td>
                        <td>@schedule.StartTime-@schedule.StopTime</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

@*Create Announcements section*@
<div class="announcements" style="margin: auto; text-align: center;">
    <h1 style="color: gold;  outline: 0; display: inline-block; padding: 8px; color: gold; text-align: center; "><u>Announcements</u></h1><br /><br />
    <div style="text-align:center;">
        @*Loop through each Announcement in the List of Announcements passed in from the controller*@
        @foreach (var item in Model)
        {
            <h4><font color="gold" face="verdana">@item.Message@*Display each message*@</font></h4>
            <hr />
        }
    </div>
    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
</div>






































